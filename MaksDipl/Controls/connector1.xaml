<UserControl x:Class="MaksDipl.Controls.Connector1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaksDipl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20" PreviewMouseDown="Base_MouseDown">
    <UserControl.Resources>
        <SolidColorBrush x:Name="BaseColor" x:Key="BaseColor" Color="Black"/>
    </UserControl.Resources>
    <Grid Background="White">
        <Polyline Stroke="{StaticResource BaseColor}">
            <Polyline.Points>
                <Point X="1" Y="1"/>
                <Point X="10" Y="10"/>
                <Point X="1" Y="19"/>
            </Polyline.Points>
            
        </Polyline>
        <Polyline Stroke="{StaticResource BaseColor}">
            <Polyline.Points>
                <Point X="10" Y="1"/>
                <Point X="19" Y="10"/>
                <Point X="10" Y="19"/>
            </Polyline.Points>

        </Polyline>
        <Line X1="0" Y1="10" X2="10" Y2="10" Stroke="{StaticResource BaseColor}"/>

    </Grid>
</UserControl>
